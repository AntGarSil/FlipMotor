<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ProjectPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>mysql</jta-data-source>
    <class>Flipmotor.Entities.Vehicleadvert</class>
    <class>Flipmotor.Entities.Offer</class>
    <class>Flipmotor.Entities.Administrato</class>
    <class>Flipmotor.Entities.Fav</class>
    <class>Flipmotor.Entities.Businessadvert</class>
    <class>Flipmotor.Entities.Registeredclient</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
